<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Manage Activities</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Activities</a></li>
                        <li class="breadcrumb-item active">View</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Adventure Activity ( <%= data.title %> ) Types</b></h4>
                        <a href="/admin/activities_adventure/<%= data.id %>/create_activity_type"><button type="button"
                                class="btn btn-custom waves-light waves-effect w-md">Add Activity Type</button></a>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Activity</th>
                                <th>Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>


                            <% data.activity_adventure_types.forEach((value, key) => { %>

                                <tr>
                                    <td><%= value.name %></td>
                                    <td><%= value.activity.title %></td>
                                    <td>
                                        <input type="checkbox" class="sa-status" data-plugin="switchery" data-size="small" data-color="#1bb99a" data-id="<%= value.id %>" value="<%= value.status %>"  <%= (value.status == '1') ? 'checked' : '' %> />
                                        <form id="status-form-<%= value.id %>" action="/admin/activities_adventure/update_activity_type_status/<%= value.id %>" method="post" style="display: none;" >
                                            <input class="status-value-<%= value.id %>" type="hidden" name="status" value="<%= value.status %>">
                                        </form>
                                    </td>    
                                    <td class="text-center">
                                        <a href="/admin/activities_adventure/edit_activity_type/<%= value.id %>" class="on-default edit-row pr-1 text-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            
                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>