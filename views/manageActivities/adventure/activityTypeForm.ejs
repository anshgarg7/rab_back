<input type="hidden" name="activity_id" value="<%= typeof data != 'undefined' ? data.activity_id : activityId %>">
<div class="form-group row">
    <div class="col-6">
        <label for="exampleInputTitle">Name</label>
        <input type="text" class="form-control" name="name" value="<%= typeof data != 'undefined' ? data.name : '' %>" id="exampleInputTitle" placeholder="Name" autocomplete="off">
    </div>
</div>                       
<div class="form-group row">
    <div class="col-12">
        <label for="exampleInputStatus">Status</label>
        <input type="checkbox" name="status" value="1" data-plugin="switchery" data-color="#1bb99a" <%= typeof data != 'undefined' && data.status == '1' ? 'checked' : typeof data == 'undefined' ? 'checked' : '' %>>
    </div>
</div>
<button type="submit" class="btn btn-custom waves-effect waves-light">Submit</button>