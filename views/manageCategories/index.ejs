<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Manage Categories</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Categories</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Categories</b></h4>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% data.forEach((value, key) => { %>

                            <tr>
                                <td><%= value.title %></td>
                                <td>
                                    <input type="checkbox" class="sa-status" data-plugin="switchery" data-size="small" data-color="#1bb99a" data-id="<%= value.id %>" value="<%= value.status %>"  <%= (value.status == '1') ? 'checked' : '' %> />
                                    <form id="status-form-<%= value.id %>" action="/admin/categories/update_status/<%= value.id %>" method="post" style="display: none;" >
                                        <input class="status-value-<%= value.id %>" type="hidden" name="status" value="<%= value.status %>">
                                    </form>
                                    <p style="display: none;" ><%= (value.status == '1') ? 'Active' : 'Inactive' %></p>
                                </td>   
                            </tr>

                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>