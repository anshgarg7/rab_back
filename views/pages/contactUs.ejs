<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Contact Us</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                        <li class="breadcrumb-item active">Contact Us</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Contact Us</b></h4>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% data.forEach((value, key) => { %>

                            <tr>
                                <td><%= value.first_name +' '+ value.last_name %></td>
                                <td><%= value.email %></td>
                                <td><%= value.country_code +' '+ value.mobile_no %></td>
                                <td class="text-center">
                                    <%if (value.is_reply == 0) { %>

                                        <a href="/admin/contact_us/view/<%= value.id %>" class="hidden on-editing save-row pr-2 text-success" data-toggle="tooltip"
                                            data-placement="top" title="" data-original-title="Reply"><i class="fa fa-reply"></i></a>

                                    <% } %>
                                    
                                    <a href="/admin/contact_us/view/<%= value.id %>" class="hidden on-editing save-row pr-2 text-info" data-toggle="tooltip"
                                        data-placement="top" title="" data-original-title="View"><i class="fa fa-eye"></i></a>
                                    <a href="javascript:void(0)" class="on-default remove-row text-danger sa-params" data-toggle="tooltip"
                                        data-placement="top" data-id="<%= value.id %>" title="" data-original-title="Delete"><i class="fa fa-trash-o"></i></a>
                                    <form id="delete-form-<%= value.id %>" action="/admin/contact_us/delete/<%= value.id %>" method="post" style="display: none;" ></form>    
                                </td>
                            </tr>

                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>