<div class="form-group row">
    <div class="col-6">
        <label>First Name</label>
        <input type="text" name="first_name" value="<%= typeof hotel != 'undefined' ? hotel.first_name : '' %>" class="form-control" placeholder="First Name" autocomplete="off">
    </div>
    <div class="col-6">
        <label>Last Name</label>
        <input type="text" name="last_name" value="<%= typeof hotel != 'undefined' ? hotel.last_name : '' %>" class="form-control" placeholder="Last Name" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label>Email</label>
        <input type="email" name="email" value="<%= typeof hotel != 'undefined' ? hotel.email : '' %>" class="form-control" parsley-trigger="change" placeholder="Email" autocomplete="off">
    </div>

    <%if (typeof hotel == 'undefined') { %>

    <div class="col-4">
        <label>Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password" autocomplete="off">
    </div>
    <div class="col-4">
        <label>Confirm Password</label>
        <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password" autocomplete="off">
    </div>

    <% } %>
    
</div>
<div class="form-group row">
    <div class="col-4 phone-selector intelMobile">
        <label>Mobile</label>
        <input id="phone" type="tel" name="mobile_no" value="<%= typeof hotel != 'undefined' ? hotel.country_code : '' %><%= typeof hotel != 'undefined' ? hotel.mobile_no : '' %>" class="form-control" placeholder="Mobile" autocomplete="off">
        <span id="valid-msg" class="hide">✓ Valid</span>
        <span id="error-msg" class="hide"></span>
        <input type="hidden" name="country_code" value="" class="selected-country-code"/>
        <input type="hidden" name="country_iso" value="" class="selected-country-iso"/>
    </div>
    <div class="col-4">
        <label>Gender</label>
        <select name="gender" class="form-control" autocomplete="off">
            <option value="">Select</option>
            <option value="Male" <%= typeof hotel != 'undefined' && hotel.gender == 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= typeof hotel != 'undefined' && hotel.gender == 'Female' ? 'selected' : '' %>>Female</option>
            <option value="Other" <%= typeof hotel != 'undefined' && hotel.gender == 'Female' ? 'Other' : '' %>>Other</option>
        </select>
    </div>
    <div class="col-4">
        <label>Date of Birth</label>
        <input type="text" name="dob" value="<%= typeof hotel != 'undefined' ? moment(hotel.dob).format('DD-MM-YYYY') : '' %>" class="form-control" onkeydown="return false" placeholder="DD-MM-YYYY" id="datepicker-autoclose" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label>Country</label>
        <select name="country" data-value="<%= typeof hotel != 'undefined' ? hotel.country : '' %>" class="countries form-control select2" id="countryId" autocomplete="off">
            <option value="">Select</option>
        </select>
    </div>
    <div class="col-4">
        <label>State</label>
        <select name="state" data-value="<%= typeof hotel != 'undefined' ? hotel.state : '' %>" class="states form-control select2" id="stateId" autocomplete="off">
            <option value="">Select</option>
        </select>
    </div>
    <div class="col-4">
        <label>City</label>
        <select name="city" data-value="<%= typeof hotel != 'undefined' ? hotel.city : '' %>" class="cities form-control select2" id="cityId" autocomplete="off">
            <option value="">Select</option>
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-9">
        <label>Address</label>
        <input type="text" name="address" value="<%= typeof hotel != 'undefined' ? hotel.address : '' %>" class="form-control" placeholder="Address" autocomplete="off">
    </div>
    <div class="col-3">
        <label>Pin Code</label>
        <input type="text" name="pin_code" value="<%= typeof hotel != 'undefined' ? hotel.pin_code : '' %>" class="form-control"  placeholder="Pin Code" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Landmark</label>
        <input type="text" name="landmark" value="<%= typeof hotel != 'undefined' ? hotel.landmark : '' %>" class="form-control"  placeholder="Landmark" autocomplete="off">
    </div>
</div>
<div class="form-group row dragDrop">
    <div class="col-12">
        <label>Image <small><b>Note: </b><i>Only .png, .jpg, .jpeg, .gif format are accepted.</i></small></label>
        <div class="row m-0">
            <div class="dropzone-wrapper col-8">
                <div class="dropzone-desc">
                <i class="fa fa-cloud-upload"></i>
                <p>Choose an image file or drag it here.</p>
                </div>
                <input type="file" name="image" accept="image/png,image/gif,image/jpeg" class="dropzone" autocomplete="off">
            </div>
            <div class="preview-zone hidden col-4">
                <div class="box box-solid">
                    <div class="position-absolute" style="right: 0;">
                        <button style="display: none;" type="button" class="btn btn-danger btn-xs remove-preview">
                            <i class="fa fa-times"></i> Remove
                        </button>
                    </div>
                    <div class="box-body">

                        <%if (typeof hotel != 'undefined') { %>

                        <img width="200" id="imageData" src="<%= hotel.image %>">

                        <% } %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-12 mt-2">
        <label>Status</label>
        <input type="checkbox" name="status" value="1" data-plugin="switchery" data-color="#1bb99a" <%= typeof hotel != 'undefined' && hotel.status == '1' ? 'checked' : typeof hotel == 'undefined' ? 'checked' : '' %>>
    </div>
</div>
<h4 class="m-t-0 m-b-30 header-title">Add Hotel Business Details</h4>
<div class="form-group row">
    <div class="col-6">
        <label>Business Name</label>
        <input type="text" name="business_name" value="<%= typeof hotel != 'undefined' ? hotel.hotel_business_detail.business_name : '' %>" class="form-control" placeholder="Business Name" autocomplete="off">
    </div>
    <div class="col-6 aletrnate-phone-selector intelMobile">
        <label>Aletrnate Mobile</label>
        <input id="aletrnatePhone" type="text" name="aletrnate_mobile_no" value="<%= typeof hotel != 'undefined' ? hotel.hotel_business_detail.aletrnate_mobile_no : '' %>" class="form-control" placeholder="Aletrnate Mobile" autocomplete="off">
        <span id="aletrnate-valid-msg" class="hide">✓ Valid</span>
        <span id="aletrnate-error-msg" class="hide"></span>
        <input type="hidden" name="aletrnate_country_code" value="" class="selected-country-code"/>
        <input type="hidden" name="aletrnate_country_iso" value="" class="selected-country-iso"/>
    </div>
</div>
<div class="form-group row">
    <div class="col-6">
        <label>GST Number</label>
        <input type="text" name="gst_no" value="<%= typeof hotel != 'undefined' ? hotel.hotel_business_detail.gst_no : '' %>" class="form-control" placeholder="GST Number" autocomplete="off">
    </div>
    <div class="col-6">
        <label>Location</label>
        <input id="pac-input" type="text" name="location" value="<%= typeof hotel != 'undefined' ? hotel.hotel_business_detail.location : '' %>" class="form-control" placeholder="Location" autocomplete="off">
        <input id="latitudeLocation" type="hidden" name="latitude" value="">
        <input id="longitudeLocation" type="hidden" name="longitude" value="">
        <div id="map"></div>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Description</label>
        <input type="text" name="description" value="<%= typeof hotel != 'undefined' ? hotel.hotel_business_detail.description : '' %>" class="form-control" placeholder="Enter Somthing About Your Business" autocomplete="off">
    </div>
</div>
<button type="submit" class="btn btn-custom waves-effect waves-light">Submit</button>
