<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Manage Users</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                        <li class="breadcrumb-item active">View</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="text-center card-box">
                    <div class="clearfix"></div>
                    <div class="member-card">
                        <div class="thumb-xl member-thumb m-b-10 mx-auto">
                            <img src="<%= hotel.image %>" class="rounded-circle img-thumbnail" alt="profile-image">
                            <i class="mdi mdi-star-circle member-star text-success" title="verified user"></i>
                        </div>
                        <div class="">
                            <h4 class="m-b-5 font-18"><%= hotel?.first_name || '' %> <%= hotel?.last_name || '' %></h4>
                            <p class="text-muted m-b-0"><span class="text-pink"> <%= hotel?.email || '' %> </span> </p>
                            <p class="text-muted"> <%= hotel?.country_code +' '+ hotel?.mobile_no || '' %> </p>
                        </div>
                        <p class="text-muted font-13"> <%= hotel?.city || '' %>, <%= hotel?.state || '' %>, <%= hotel?.country || '' %> </p>
                    </div>
                </div>
                <div class="text-center card-box">
                    <div class="clearfix"></div>
                    <div class="member-card">
                        <h4 class="header-title m-b-20">Hotel Referral Details</h4>
                        <div>
                            <h5 class="text-custom m-b-5"><span class="text-muted">Total Referral:</span> <%= hotel?.referrals_count || 0 %> </h5>
                            <h5 class="text-custom m-b-5"><span class="text-muted">Total Active Referral:</span> <%= hotel?.active_referrals_count || 0 %> </h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-box">
                    <h4 class="header-title mt-0 m-b-20">Details</h4>
                    <div>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Gender:</span> <%= hotel?.gender || '' %> </h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Date of Birth:</span> <%= moment(hotel?.dob).format('DD-MM-YYYY') || '' %> </h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Address:</span> <span class="font-13 m-b-0"> <%= hotel?.address || '' %> </span></h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Pin Code:</span> <span class="font-13 m-b-0"> <%= hotel?.pin_code || '' %> </span></h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Landmark:</span> <span class="font-13 m-b-0"> <%= hotel?.landmark || '' %> </span></h5>
                    </div>
                    <h4 class="header-title mt-4 m-b-20">Hotel Business Details</h4>
                    <div>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Business Name:</span> <%= hotel?.hotel_business_detail?.business_name || '' %> </h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Aletrnate Mobile:</span> <%= hotel?.hotel_business_detail?.aletrnate_country_code +' '+ hotel?.hotel_business_detail?.aletrnate_mobile_no || '' %> </h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Location:</span> <span class="font-13 m-b-0"> <%= hotel?.hotel_business_detail?.location || '' %> </span></h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">GST Number:</span> <span class="font-13 m-b-0"> <%= hotel?.hotel_business_detail?.gst_no || '' %> </span></h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Description:</span> <span class="font-13 m-b-0"> <%= hotel?.hotel_business_detail?.description || '' %> </span></h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Referral Code:</span> <span class="font-13 m-b-0"> <%= hotel?.referral?.referral_code || '' %> </span></h5>
                        <h5 class="text-custom m-b-5"><span class="text-muted">Referral QR Code:</span> <span class="font-13 m-b-0"> <br> <img src="<%= hotel?.referral?.qr_code || '' %>"> </span></h5>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
