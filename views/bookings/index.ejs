<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Manage Activities Bookings</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Activities Bookings</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Activities Bookings</b></h4>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Activity Type</th>
                                <th>User Email</th>
                                <th>User Mobile</th>
                                <th>Quantity</th>
                                <th>Total Price (INR)</th>
                                <th>Start Date & Time</th>
                                <th>End Date & Time</th>
                                <th>Status</th>
                                <th>Level Points</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% bookings.forEach((value, key) => { %>

                                <tr>
                                    <td><%= value.activity_share_type == '1' ? 'Adventure' : 'Rental' %></td>
                                    <td><%= value.user.email %></td>
                                    <td><%= value.user.country_code +' '+ value.user.mobile_no %></td>
                                    <td><%= value.quantity %></td>
                                    <td><%= value.total_price +' '+ (value.price_type == '1' ? '/person' : value.price_type == '2' ? '/hour' : '/day') %></td>
                                    <td><%= value.start_date +' '+ value.start_time %></td>
                                    <td><%= value.end_date +' '+ value.end_time %></td>
                                    <td><%= value.status == '1' ? 'pending' : value.status == '2' ? 'in-progress' : value.status == '3' ? 'abandoned' : value.status == '4' ? 'completed' : 'cancelled' %></td>
                                    <td><%= value.level_points %></td>
                                    <td class="text-center">
                                        <a href="/admin/bookings/view_booking_detail/<%= value.id %>" class="hidden on-editing save-row pr-2 text-info" data-toggle="tooltip"
                                            data-placement="top" title="" data-original-title="View"><i
                                                class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
    
                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>