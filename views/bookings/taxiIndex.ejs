<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Manage Taxi Bookings</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Taxi Bookings</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Taxi Bookings</b></h4>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Taxi Registration No.</th>
                                <th>User Email</th>
                                <th>User Mobile</th>
                                <th>Total Price (INR)</th>
                                <th>Start Date & Time</th>
                                <th>Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% taxiBookings.forEach((value, key) => { %>

                                <tr>
                                    <td><%= value?.driver?.taxi_driver_business_detail?.registration_no %></td>
                                    <td><%= value?.user?.email %></td>
                                    <td><%= value?.user?.country_code +' '+ value?.user?.mobile_no %></td>
                                    <td><%= value.total_price %></td>
                                    <td><%= moment(value.start_date_time).format('DD-MM-YYYY HH:MM:SS') %></td>
                                    <td><%= value.status == '1' ? 'pending' : value.status == '2' ? 'in-progress' : value.status == '3' ? 'abandoned' : value.status == '4' ? 'completed' : 'cancelled' %></td>
                                    <td class="text-center">
                                        <a href="/admin/taxi_bookings/view_taxi_booking_detail/<%= value.id %>" class="hidden on-editing save-row pr-2 text-info" data-toggle="tooltip"
                                            data-placement="top" title="" data-original-title="View"><i
                                                class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
    
                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>