<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">All Transactions</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Transactions</a></li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Transactions</b></h4>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Transaction Payment Id</th>
                                <th>Transaction Refund Id</th>
                                <th>Entity</th>
                                <th>Amount (INR)</th>
                                <th>Method</th>
                                <th>Created At</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% allTransactions.forEach((value, key) => { %>

                                <tr>
                                    <td><%= value.transaction_payment_ref ? value.transaction_payment_ref : 'Null' %></td>
                                    <td><%= value.transaction_refund_ref ? value.transaction_refund_ref : 'Null' %></td>
                                    <td><%= value.entity %></td>
                                    <td><%= parseFloat(value.amount).toFixed(2) %></td>
                                    <td><%= value.method %></td>
                                    <td><%= value.created_at %></td>
                                    <td><%= value.status %></td>
                                </tr>
    
                            <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>