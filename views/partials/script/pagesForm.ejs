<!-- jquery-validate -->
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/additional-validate-methods.min.js"></script>
<script>
    $(function() {
        setTimeout(function () {
            $('#privacyPolicyForm, #termConditionsForm').validate({
                ignore: [],
                rules :{
                    description : {
                        required : true,
                    },
                },
                messages :{
                    description : {
                        required : "Please enter description.",
                    },
                }
            });
        }, 1000);

        setTimeout(function () {
            $('#contactUsForm').validate({
                ignore: [],
                rules :{
                    reply_message : {
                        required : true,
                    },
                },
                messages :{
                    reply_message : {
                        required : "Please enter answer.",
                    },
                }
            });
        }, 1000);
    });
</script>

